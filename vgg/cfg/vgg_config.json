{
  "name": "DefaultCifar10_Vgg11",
  "n_gpu": 1,
  "arch": {
    "type": "Vgg11",
    "args": {}
  },
  "data_loader": {
    "type": "DefaultCifar10DataLoader",
    "args": {
      "data_dir": "data/",
      "batch_size": 32,
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 2
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0.0,
      "amsgrad": true
    }
  },
  "loss": "cross_entropy",
  "metrics": [
    "accuracy"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}